---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
  <feed xmlns="http://www.w3.org/2005/Atom">

    <title>{{ site.title }} -- {{ page.category | capitalize }}</title>
    <link href="{{ site.url }}/collections/{{ page.category | slugify }}/atom.xml" rel="self"/>
    <link href="{{ site.url }}/collections/{{ page.category | slugify }}/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url }}/collections/{{ page.category | slugify }}</id>
    <author>
      <name>{{ site.author.name }}</name>
      <email>{{ site.author.email }}</email>
    </author>

{% for post in site.categories[page.category] %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{{ site.url }}{{ post.url }}"/>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ post.id }}</id>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
 {% endfor %}

</feed>


